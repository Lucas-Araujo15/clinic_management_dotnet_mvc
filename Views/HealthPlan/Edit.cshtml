@model ClinicManagementMVC.Models.HealthPlan;

@{
    ViewData["Title"] = "Editar Plano de Saúde";
}

<h1 class="mt-3">@ViewData["Title"]</h1>

<form asp-action="Update" class="mt-3" asp-route-id="@Model.Id" method="post">
    <div class="form-group mt-3">
        <label asp-for="Name" class="control-label">Nome</label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Coverage" class="control-label">Cobertura</label>
        <input asp-for="Coverage" class="form-control" value="@Model.Coverage" />
        <span asp-validation-for="Coverage" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input asp-for="PlanCode" type="hidden" class="form-control" value="@Model.PlanCode" />
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>