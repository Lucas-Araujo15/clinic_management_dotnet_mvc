@model ClinicManagementMVC.ViewModels.PatientDetailedViewModel;

@{
    ViewData["Title"] = "Paciente";
}

<h1 class="mt-3">@Model.Patient.Name</h1>

<div class="container mt-3">
    <div class="row mt-3">
        <ul class="list-group col">
            <li class="list-group-item">
                <h5>Id</h5>
                <p>@Model.Patient.Id</p>
            </li>
            <li class="list-group-item">
                <h5>Data de Nascimento</h5>
                <p>@Model.Patient.DateOfBirth</p>
            </li>
            <li class="list-group-item">
                <h5>CPF</h5>
                <p>@Model.Patient.Cpf</p>
            </li>
            <li class="list-group-item">
                <h5>Telefone</h5>
                <p>@Model.Patient.Phone</p>
            </li>
        </ul>
        <ul class="list-group col">
            <li class="list-group-item">
                <h5>Rua</h5>
                <p>@Model.Patient.address.Street</p>
            </li>
            <li class="list-group-item">
                <h5>Bairro</h5>
                <p>@Model.Patient.address.Neighborhood</p>
            </li>
            <li class="list-group-item">
                <h5>Cidade</h5>
                <p>@Model.Patient.address.City</p>
            </li>
            <li class="list-group-item">
                <h5>Estado</h5>
                <p>@Model.Patient.address.State</p>
            </li>
        </ul>
    </div>
    <div class="row mt-3">
        <h2 class="mt-3">Planos de Saúde Associados</h2>

        @if (Model.HealthPlans != null && Model.HealthPlans.Any())
        {
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Código do plano</th>
                        <th>Cobertura</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.HealthPlans)
                    {
                        <tr>
                            <td>@item.HealthPlan.Id</td>
                            <td>@item.HealthPlan.Name</td>
                            <td>@item.HealthPlan.PlanCode</td>
                            <td>@item.HealthPlan.Coverage</td>
                            <td>
                                <a href="@Url.Action("DeletePatientHealthPlan", "Patient", new { patientHealthPlanId = item.Id, patientId = Model.Patient.Id })" method="delete" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Nenhum plano de saúde encontrado.</p>
        }
    </div>
</div>