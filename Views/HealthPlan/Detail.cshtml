@model ClinicManagementMVC.ViewModels.HealthPlanDetailedViewModel;

@{
    ViewData["Title"] = "Plano de Saúde";
}

<h1 class="mt-3">@Model.HealthPlan.Name</h1>

<div class="container mt-3">
    <div class="row d-flex align-content-center mt-3">
        <ul class="list-group col">
            <li class="list-group-item">
                <h5>Código do Plano</h5>
                <p>@Model.HealthPlan.PlanCode</p>
            </li>
            <li class="list-group-item">
                <h5>Cobertura</h5>
                <p>@Model.HealthPlan.Coverage</p>
            </li>
        </ul>
    </div>
    <div class="row mt-3">
        <h2 class="mt-3">Pacientes Associados</h2>

        @if (Model.Patients != null && Model.Patients.Any())
        {
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Data de Nascimento</th>
                        <th>CPF</th>
                        <th>Telefone</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Patients)
                    {
                        <tr>
                            <td>@item.Patient.Id</td>
                            <td>@item.Patient.Name</td>
                            <td>@item.Patient.DateOfBirth</td>
                            <td>@item.Patient.Cpf</td>
                            <td>@item.Patient.Phone</td>
                            <td>
                                <a href="@Url.Action("DeletePatientHealthPlan", "HealthPlan", new { patientHealthPlanId = item.Id, healthPlanId = Model.HealthPlan.Id })" method="delete" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="mt-3">Nenhum paciente associado a esse plano de saúde.</p>
        }
    </div>
</div>