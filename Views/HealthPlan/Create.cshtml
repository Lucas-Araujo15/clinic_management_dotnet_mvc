@model ClinicManagementMVC.Models.Request.CreateHealthPlanRequest;

@{
    ViewData["Title"] = "Adicionar Novo Plano de Saúde";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Nome</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Coverage" class="control-label">Cobertura</label>
        <input asp-for="Coverage" class="form-control" />
        <span asp-validation-for="Coverage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>