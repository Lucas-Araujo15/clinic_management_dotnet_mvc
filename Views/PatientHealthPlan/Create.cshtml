@model ClinicManagementMVC.ViewModels.CreatePatientHealthPlanViewModel;

@{
    ViewData["Title"] = "Adicionar Nova Associação";
}

<h1 class="mt-3">@ViewData["Title"]</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<form asp-action="Create" class="mt-3" method="post" >

    <div class="form-group mt-3">
        <label asp-for="CreatePatientHealthPlanRequest.PatientId" class="control-label">Paciente</label>
        <select required asp-for="CreatePatientHealthPlanRequest.PatientId" class="form-select" aria-label="Seleção de paciente">
            <option value="" disabled selected>Selecione uma opção</option>
            @foreach (var item in Model.Patients)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <span asp-validation-for="CreatePatientHealthPlanRequest.PatientId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="CreatePatientHealthPlanRequest.HealthPlanId" class="control-label">Plano de Saúde</label>
        <select required asp-for="CreatePatientHealthPlanRequest.HealthPlanId" class="form-select" aria-label="Seleção de plano de saúde">
            <option value="" disabled selected>Selecione uma opção</option>
            @foreach (var item in Model.HealthPlans)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <span asp-validation-for="CreatePatientHealthPlanRequest.HealthPlanId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
